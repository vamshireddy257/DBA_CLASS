#################################################################################
create new server
---------------------------------------------------------------------------------
6G ram
120GB storage
1 cpu
---------------------------------------------------------------------------------


############################
install os
---------------------------------------------------------------------------------
16G swap
boot 2048
biosboot 2048
/ 20G
/u01 all

install guest additions

---------------------------------------------------------------------------------

#################################################################################
pre requisites
---------------------------------------------------------------------------------
yum -y install oracle-database-server-12cR2-preinstall.x86_64
---------------------------------------------------------------------------------

#################################################################################
create groups and users
---------------------------------------------------------------------------------
groupadd oinstall 
groupadd dba 

useradd -g oinstall -d /home/oracle -s /bin/bash -c "oracle DB Owner" oracle
usermod -a -G dba oracle
passwd oracle
---------------------------------------------------------------------------------

#################################################################################
create directories
---------------------------------------------------------------------------------
chown -R oracle:oinstall /u01
chmod -R 775 /u01
mkdir -p /u01/app/oracle/product/12.2.0/dbhome_1


---------------------------------------------------------------------------------

#################################################################################
copy 12c software using winscp.
---------------------------------------------------------------------------------
---------------------------------------------------------------------------------
cd 

chmod 777 V839960-01.zip
unzip database software in /home/oracle

cd database

export ORACLE_HOME=/u01/app/oracle/product/12.2.0/dbhome_1
ORACLE_SID=proddb
ORACLE_BASE=/u01/app/oracle
cd $ORACLE_HOME/bin

create database.

