srvctl config


srvctl stop database -d proddb -o normal
srvctl stop database -d proddb -o immediate
srvctl stop database -d proddb -o transactional
srvctl stop database -d proddb -o abort

srvctl config database -d proddb

srvctl start database -d proddb -o nomount
srvctl start database -d proddb -o mount
srvctl start database -d proddb -o open


srvctl stop instance -d proddb -i proddb1


srvctl start instance -d proddb -i proddb1


srvctl enable instance -d DB_UNIQUE_NAME-i INSTANCE_NAME
srvctl disable instance -d DB_UNIQUE_NAME-i INSTANCE_NAME

srvctl enable database -d DB_UNIQUE_NAME
srvctl disable database -d DB_UNIQUE_NAME

srvctl config scan_listener





srvctl modify scan_listener -p {new-SCAN-port}

srvctl modify scan_listener -p 1523



$GRID_HOME/bin/srvctl stop scan_listener
$GRID_HOME/bin/srvctl start scan_listener
